<UserControl xmlns:WinDeployQT_GUI="clr-namespace:WinDeployQt_GUI"  x:Class="WinDeployQt_GUI.UserControls.WinDeployQtUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WinDeployQt_GUI.UserControls"
             mc:Ignorable="d" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="110"></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <WinDeployQT_GUI:GetLinkUserControl HorizontalAlignment="Stretch" Margin="0"/>
        <RichTextBox Name="WinDeployQt_status" Margin="5" IsReadOnly="True" Grid.Row="2" VerticalScrollBarVisibility="Auto" TextChanged="RichTextBox_TextChanged">
            <FlowDocument>
                <Paragraph>
                    <Run Text="{Binding WinDeployQtText}" ></Run>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        <Button Content="Deploy" Grid.Row="1" Width="100" HorizontalAlignment="Center" Margin="5" Command="{Binding Deploy}" TabIndex="3"></Button>
    </Grid>
</UserControl>
